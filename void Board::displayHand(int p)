            {
              cout << "  ^ Hero Card            ^";
            {
            else
            {
              cout << "  ^                      ^";
            }
          }
          else if(l == 7)
          {
            cout << "  ^                      ^";
          }
        }
        cout << endl;
      }
      cout << endl << endl;
      
      for(int l = 0; l <= 8 ; l++)
      {
        for(int c = 6; c <= row2Cards + 5; c++)
        {
          if(l == 1 || l == 8)
          {
            cout << "  ^**********************^";
          }
          else if(l == 2)
          {
            cout << "  ^";
            printf("                      %2d^", c);
          }
          else if(l == 3)
          {
            cout << "  ^ ";
            printf("%-20s                    ^", playerTwoHand.at(c)->name);
          }
          else if(l == 4)
          {
            cout << "  ^ Strength: ";
            printf("%2d          ^", playerTwoHand.at(c)->strength);
          }
          else if(l == 5)
          {
            cout << "  ^ Ability: ";
            printf("%d           ^", playerTwoHand.at(c)->ability);
          }
          else if(l == 6)
          {
            if(playerTwoHand.at(c)->isHero)
            {
              cout << "  ^ Hero Card            ^";
            {
            else
            {
              cout << "  ^                      ^";
            }
          }
          else if(l == 7)
          {
            cout << "  ^                      ^";
          }
        }
        cout << endl;
      }
    }
    else
    {
      row 1 = cardsInHand;
      
      for(int l = 0; l <= 8 ; l++)
      {
        for(int c = 1; c <= row1Cards; c++)
        {
          if(l == 1 || l == 8)
          {
            cout << "  ^**********************^";
          }
          else if(l == 2)
          {
            cout << "  ^";
            printf("                      %2d^", c);
          }
          else if(l == 3)
          {
            cout << "  ^ ";
            printf("%-20s                    ^", playerTwoHand.at(c)->name);
